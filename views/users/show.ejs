<%- include("../partials/header") %>

<div class="row">
	<div class="col-md-4">
		<!--User Profile-->
		<h1><%= user.firstName + " " + user.lastName %> <!-- Follow Button -->
			<a href="/follow/<%= user.id %>"><button class="btn btn-primary">Follow <%= user.username %></button></a></h1>
		
		<div class="thumbnail">
			<img src="<%= user.avatar %>" alt="user profile image">
			<div class="caption"><a href="mailto:<%= user.email %>"><%= user.email %></a></div>
		</div>
		Lorem ipsum dolor sit amet, consectetur adipisicing elit. Error quasi similique architecto ad modi sunt quaerat possimus, officiis quos. Voluptatibus repellendus exercitationem, id saepe sunt consectetur non quam sapiente assumenda.
	</div>
	
	<!--The campgrounds that user created-->
	<div class="col-md-8">
		<h3><%= user.username %>'s campgrounds:</h3>
		<ul>
		<% campgrounds.forEach(function(campground) { %>
			<li><a href="/campgrounds/<%= campground._id %>"><%= campground.name %></a></li>
		<% }); %>
		</ul>
	</div>

</div>

<%- include("../partials/footer") %>