<%- include("./partials/header") %>

<div class="row">
    
    <div style="width:50%; margin: 25px auto;">
        <form class="form-signin" action="/register" method="post">

            <h1 class="h3 mb-3 font-weight-normal">Please sign up</h1>

            <label for="inputUsername" class="sr-only">Username</label>
            <input style="margin: 10px auto;" type="text" id="inputUsername" class="form-control mb-2" name="username" placeholder="Username" required autofocus>
            
            <label for="inputPassword" class="sr-only">Password</label>
            <input  style="margin: 10px auto;" type="password" id="inputPassword" class="form-control mb-2" name="password" placeholder="Password" required>

            <label for="firstName" class="sr-only">First Name</label>
            <input style="margin: 10px auto;" type="text" id="firstName" class="form-control mb-2" name="firstName" placeholder="First Name">

            <label style="margin: 10px auto;" for="lastName" class="sr-only">Last Name</label>
            <input type="text" id="lastName" class="form-control mb-2" name="lastName" placeholder="Last Name">

            <label for="email" class="sr-only">Email</label>
            <input style="margin: 10px auto;" type="email" id="email" class="form-control mb-2" name="email" placeholder="something@example.com">

            <label for="avatar" class="sr-only">Avatar</label>
            <input style="margin: 10px auto;" type="text" id="avatar" class="form-control mb-2" name="avatar" placeholder="Avatar Image URL">

            <label for="adminCode" class="sr-only">Admin Code</label>
            <input style="margin: 10px auto;" type="text" id="adminCode" class="form-control mb-2" name="adminCode" placeholder="Admin Code">

            <button class="btn btn-lg btn-primary btn-block" type="submit">Sign up</button>
        </form>
        <div class="form-signin">
            <a href="/campgrounds">Go Back</a>
        </div>
    </div>
</div>

<%- include("./partials/footer") %>